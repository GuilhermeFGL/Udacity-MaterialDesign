<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/list_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/theme_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_image_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_margin"
            android:paddingTop="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:paddingBottom="4dp"
            android:textSize="@dimen/default_big_text"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/ltgray"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Mysteries of the Universe Solved"
            style="?android:attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:paddingBottom="@dimen/default_margin"
            android:textSize="@dimen/default_small_text"
            android:textColor="#6000"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="20 de jun de 2013 by Carl Sagan"
            style="?android:attr/textAppearanceListItemSmall" />

    </LinearLayout>

</android.support.v7.widget.CardView>
